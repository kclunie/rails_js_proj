<h1>Create a New Event</h1>

<%= render partial: "layouts/errors", locals: {object: @event} %>

<%= form_for @event do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :details %>
    <%= f.text_area :details %>

    <%= f.submit 'Create Event' %>

    <% end %>