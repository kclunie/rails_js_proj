<h1>Log In Here</h1>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>


<%= form_for :user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, required:true %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Log In' %>

    <% end %>