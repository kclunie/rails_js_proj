<br><br>
<h1>Add Your RSVP</h1>

<%= render partial: "layouts/errors", locals: {object: @attend} %>

<h2><%= @attend.event.name %></h2>

<% if flash[:message] %>
<div class="message"><%= flash[:message] %></div>
<% end %><br>

<%= form_for(@attend) do |f|%>
    <%= f.hidden_field :user_id, :value => @user.id %>
    <%= f.hidden_field :event_id, :value => @event.id %>

    <%= f.label :guest, "How many guests will you bring?" %>
    <%= f.number_field :guest, min:0, max:3 %>
    <br>
    <br>
    

    <br>
    <br>
    <%= f.submit 'Attend this Event' %>
    <% end %>